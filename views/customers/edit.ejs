<% layout("../main") -%>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <% if (typeof errors !== "undefined") { %>
                    <% errors.forEach(error => { %>
                        <p class="error"><%= error.msg %></p>
                    <% }) %>
                <%} %>

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Quick Example</h3>
                    </div>
                    <form action="" method="POST">
                        <div class="card-body row">

                            <div class="form-group col-md-6">
                                <label for="title">title</label>
                                <input value="<%= model['title'] %>" type="text" class="form-control" name="title" id="title" placeholder="Enter title">
                            </div>

                            <div class="form-group col-sm-6">
                                <label>User</label>
                                <select class="form-control" name="user_id">
                                    <option value=""> -- select user -- </option>
                                    <% for(var i=0; i < usersList.length; i++) { %>
                                        <option value="<%= usersList[i]['id'] %>" <% if (usersList[i]['id'] == model['user_id']) { %> <%= 'selected' %> <% } %>>
                                            <%= usersList[i]['first_name'] + ' ' + usersList[i]['last_name'] %>
                                        </option>
                                    <% } %>
                                </select>
                            </div>

                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>