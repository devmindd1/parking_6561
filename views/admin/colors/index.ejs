<% layout("../main") -%>
 <section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with default features</h3>
                    </div>
                    <div class="card-body">
                        <div class="row" style="margin-bottom: 5px;">
                            <div class="col-sm-4">
                                <a href="/admin/colors/create" style="width: 100px;" class="btn btn-block bg-gradient-success btn-sm">Create</a>
                            </div>
                        </div>
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>quick actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i < items.length; i++) { %>
                                    <tr>
                                        <td><a class="main-anchor-link" href="/admin/colors/edit/<%= items[i]['id'] %>"><%= items[i]['title'] %></a></td>
                                        <td class="project-actions">
                                            <a class="btn btn-info btn-sm" href="/admin/colors/edit/<%= items[i]['id'] %>">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>
                                            <a class="btn btn-danger btn-sm delete-module-item" href="/admin/colors/delete/<%= items[i]['id'] %>">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



