<% layout("../main") -%>
 <section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with default features</h3>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>first name</th>
                                    <th>last name</th>
                                    <th>email</th>
                                    <th>quick actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i < users.length; i++) { %>
                                    <tr>
                                        <td><a class="main-anchor-link" href="/admin/users/edit/<%= users[i]['id'] %>"><%= users[i]['first_name'] %></a></td>
                                        <td><%= users[i]['last_name'] %></td>
                                        <td><%= users[i]['email'] %></td>
                                        <td class="project-actions">
                                            <a class="btn btn-info btn-sm" href="/admin/users/edit/<%= users[i]['id'] %>">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>
                                            <a class="btn btn-info btn-sm" href="/admin/groups/user/<%= users[i]['id'] %>">
                                                <i class="fas fa-folder"></i>
                                            </a>
                                            <a class="btn btn-danger btn-sm" href="#">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



