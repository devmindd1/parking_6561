<% layout("../main") -%>
 <section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><%= _name %></h3>
                    </div>
                    <div class="card-body">
                        <div class="row" style="margin-bottom: 5px;">
                            <div class="col-sm-4">
                                <a href="/admin/<%= _module %>/create" style="width: 100px;" class="btn btn-block bg-gradient-success btn-sm">Create</a>
                            </div>
                        </div>

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last name</th>
                                    <th>Email</th>
                                    <th>Quick actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% items.forEach(function(item) { %>
                                <tr>
                                    <td><a class="main-anchor-link" href="/admin/<%= _module %>/edit/<%= item['id'] %>"><%= item['first_name'] %></a></td>
                                    <td><%= item['last_name'] %></td>
                                    <td><%= item['email'] %></td>
                                    <td class="project-actions">
                                        <a class="btn btn-info btn-sm" href="/admin/<%= _module %>/edit/<%= item['id'] %>">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm delete-module-item" href="/admin/<%= _module %>/delete/<%= item['id'] %>">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



