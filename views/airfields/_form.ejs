<div class="card-body">
    <div class="row">
        <div class="col-sm-12">
            <div id="map" ></div>
        </div>
    </div>

    <div class="row margin">
        <div class="col-md-6">
            <div class="card card-success collapsed-card" id="weight_types_hangar">
                <div class="card-header" style="background-color: #034168;">
                    <h3 class="card-title">Hangar prices</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <% for(let i=0; i < weightTypes.length; i++) { %>
                        <%- i%2 === 0 ? '<div class="row">': '' %>
                        <div class="col-sm-6" style="border: 1px dotted grey;">
                            <span><b><%= weightTypes[i]['title'] %></b></span>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-check-label">Long</label>
                                        <input type="text" name="weight_type[hangar][<%= weightTypes[i]['id'] %>][long]" class="form-control" placeholder="Long price"
                                            value="<%= model.weightTypes['hangar'][weightTypes[i]['id']]['long'] ? model.weightTypes['hangar'][weightTypes[i]['id']]['long']: '' %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-check-label">Short</label>
                                        <input type="text" name="weight_type[hangar][<%= weightTypes[i]['id'] %>][short]" class="form-control" placeholder="Short price"
                                               value="<%= model.weightTypes['hangar'][weightTypes[i]['id']]['short'] ? model.weightTypes['hangar'][weightTypes[i]['id']]['short']: '' %>">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%- i%2 === 1 ? '</div>': '' %>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card card-success collapsed-card" id="weight_types_parking">
                <div class="card-header" style="background-color: #034168;">
                    <h3 class="card-title">Outdoor prices</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <% for(let i=0; i < weightTypes.length; i++) { %>
                        <%- i%2 === 0 ? '<div class="row">': '' %>
                        <div class="col-sm-6" style="border: 1px dotted grey;">
                            <span><b><%= weightTypes[i]['title'] %></b></span>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-check-label">Long</label>
                                        <input type="text" name="weight_type[parking][<%= weightTypes[i]['id'] %>][long]" class="form-control" placeholder="Long price"
                                               value="<%= model.weightTypes['parking'][weightTypes[i]['id']]['long'] ? model.weightTypes['parking'][weightTypes[i]['id']]['long']: '' %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-check-label">Short</label>
                                        <input type="text" name="weight_type[parking][<%= weightTypes[i]['id'] %>][short]" class="form-control" placeholder="Short price"
                                               value="<%= model.weightTypes['parking'][weightTypes[i]['id']]['short'] ? model.weightTypes['parking'][weightTypes[i]['id']]['short']: '' %>">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%- i%2 === 1 ? '</div>': '' %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="form-check-label">OACI</label>
                <select name="oaci_type_id" id="oaci_type_id" class="form-control select2 select2Oaci" style="width: 100%;">
                    <option value="" selected="selected">-- Select OACI --</option>
                    <% oaciTypes.forEach(function(oaciType) { %>
                        <option data-coord="<%= oaciType.latitude %>,<%= oaciType.longitude %>" value="<%= oaciType.id %>"
                                <%= model['oaci_type_id'] === oaciType.id ? 'selected': '' %>>
                            <%= oaciType.oaci_code %>: &#160;&#160; <%= oaciType.airfield_name %>
                        </option>
                    <% }); %>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="form-check-label">Amenities</label>
                <select class="select2" name="amenity_type_ids" multiple="multiple" data-placeholder="Select a Amenity" style="width: 100%;">
                    <% amenities.forEach(function(type) { %>
                        <option value="<%= type.id %>"><%= type.title %></option>
                    <% }); %>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="form-check-label">Runways</label>
                <select class="select2" name="runway_type_ids" multiple="multiple" data-placeholder="Select a Runway" style="width: 100%;">
                    <% runwayTypes.forEach(function(type) { %>
                        <option value="<%= type.id %>"><%= type.title %></option>
                    <% }); %>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="form-check-label">Manager name</label>
                <input type="text" name="manager_name" class="form-control" placeholder="Manager name">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="form-check-label">Phone Number</label>
                <input type="text" name="phone_number" class="form-control" placeholder="Phone Number">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="form-check-label">Primary email</label>
                <input type="text" id="primary_email" name="primary_email" class="form-control" placeholder="Primary email">
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label class="form-check-label">Number of Spaces</label>
                <input type="text" name="spaces_count" class="form-control" placeholder="Number of Spaces">
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label class="form-check-label">Number of hangar</label>
                <input type="text" name="hangar_count" class="form-control" placeholder="Number of hangar">
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label class="form-check-label">Number of outdoor</label>
                <input type="text" name="parking_count" class="form-control" placeholder="Number of outdoor">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card card-default">
                <div class="card-header">
                    <b>Upload your operating license</b>
                </div>
                <div class="card-body">
                    <div id="actions" class="row">
                        <button type="button" class="btn btn-primary btn-block bg-gradient-secondary" data-toggle="modal" data-target="#modal-lg">
                            <i class="fas fa-file-upload"></i>
                            Upload Document Image
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-default">
                <div class="card-header">
                    <b>Fill your bank details</b>
                </div>
                <div class="card-body">
                    <div id="actions" class="row">
                        <button type="button" class="btn btn-primary btn-block bg-gradient-secondary" data-toggle="modal" data-target="#modal-lg-1">
                            <i class="fas fa-pencil-alt"></i>
                            Fill your bank details
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-default">
                <div class="card-header">
                    <b>Upload Airfield Pictures</b>
                </div>
                <div class="card-body">
                    <div id="actions" class="row">
                        <button type="button" class="btn btn-primary btn-block bg-gradient-secondary" data-toggle="modal" data-target="#modal-lg-2">
                            <i class="fas fa-file-upload"></i>
                            Upload Airfield Pictures
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include ./common/airfield-photos-modal.ejs %>

    <%- include ./common/document-modal.ejs %>

    <%- include ./common/bank-detail-modal.ejs %>
</div>