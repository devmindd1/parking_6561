<% layout("../layouts/main") -%>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with default features</h3>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Manager Name</th>
                                    <th>Address</th>
                                    <th>Primary email</th>
                                    <th>Phone Number</th>
                                    <th>Status</th>

                                    <th>Quick Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% for(var i=0; i < items.length; i++) { %>
                                <tr>
                                    <td><a class="main-anchor-link" href="/airfields/edit/<%= items[i]['id'] %>"><%= items[i]['manager_name'] %></a></td>
                                    <td><%= items[i]['address'] %></td>
                                    <td><%= items[i]['primary_email'] %></td>
                                    <td><%= items[i]['phone_number'] %></td>
                                    <td>
                                        <div style="border-radius: 25px;
                                                    background-color: <%= statuses[items[i]['status']]['color']%>;
                                                    padding: 10px;">
                                            <%= statuses[items[i]['status']]['name'] %>
                                        </div>
                                    </td>

                                    <td class="project-actions">
                                        <a class="btn btn-info btn-sm" href="/airfields/edit/<%= items[i]['id'] %>">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="javascript:void(0);">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



